<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-l
    RewriteRule . /index.html [L]
</IfModule>

<Files *.js>
    Header add "Cache-Control" "max-age=31536000"
</Files>

<Files *.css>
    Header add "Cache-Control" "max-age=31536000"
</Files>

<Files *.svg>
    Header add "Cache-Control" "max-age=31536000"
</Files>

<Files *.webp>
    Header add "Cache-Control" "max-age=31536000"
</Files>
